<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>    
    <%- include('../partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blogs/<%= blog.id %>" class="single">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet %></p>
                </a>
            <% }) %>
        <% } else { %>
            <p>Sorry, There are no blogs to display...</p>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>